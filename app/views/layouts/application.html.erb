<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">-->
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/assets/style.css">
  <link rel="stylesheet" href="/assets/login.css"></link>
  <!--부트스트랩-->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <!--파비콘-->
  <link rel="shortcut icon" href="/assets/killing.ico">
  <!--폰트  -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Dancing+Script|Yeon+Sung" rel="stylesheet">
  <!--박스 슬라이더-->
  <link rel='stylesheet' href="/assets/jquery.bxslider.css" type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" type="text/javascript"></script>
  <script src="/assets/jquery.bxslider.js" type="text/javascript"></script>
<body>
  <header>
    <div class="container">
      <div class="container-small">
        <a href="/welcome/index" class="headA">Killing Time</a>
      </div>
      
      <div class="search">
        <form action="/real_story/post/search" method="get" class="form-inline my-2 my-lg-0">
          <div class="form-group">
            <select name="category" class="my-control" id="exampleFormControlSelect1">
              <option value="title">제목</option>
              <option value="content">내용</option>
              <!--<option value="titleContent">제목+내용</option>-->
              <option value="user">작성자</option>
            </select>
          </div>
          <input name="q" class="myinput" type="search" placeholder='search..' aria-label="Search">
          <button type="submit" class="mybtn"><i class="fas fa-search"></i></button>
        </form>
      </div>
      
      <nav class="headB">
        <ul>
          <li><a href="/real_story"><i class="fas fa-skull"></i></a></li>
          <!--<li><a href="#"><i class="fas fa-bookmark"></i></a></li>-->
          <!--행넴 요 밑엤거이 내가쓴글로 가는깁니다-->
          <li><a href="/real_story/post/my_post"><i class="fas fa-clipboard"></i></a></li>
          <li><% if user_signed_in? %>
              
              <!--내 웹서버의 모든 routes를 보려면 rake routes를 bash창에 쓰면 된다.-->
              
              <button type="button" id="user_func" data-toggle="dropdown" aria-haspopup="true">
                <i class="far fa-user"></i>
              </button>
              <div class="dropdown-menu" aria-label="user_func">
                <a href="/users/sign_out" data-method="delete" ><%= current_user.username %></a>
                <a href="/users/sign_out" data-method="delete" >log out</a>
              </div>
              
            <% else %>
              <a href="/users/sign_in"><i class="fas fa-user-alt"></i></a>
            <% end %></li>
        </ul>
      </nav>
    </div>
  </header>
  <%= yield %>
  <footer>
    <div class="nav">
      <ul>
        <li><a href="/real_story"><i class="fas fa-skull"></i></a></li>
        <!--<li><a href="#"><i class="fas fa-bookmark"></i></a></li>-->
        <li><a href="/real_story/post/my_post"><i class="fas fa-clipboard"></i></a></li>
        <li><% if user_signed_in? %>
            
            <!--내 웹서버의 모든 routes를 보려면 rake routes를 bash창에 쓰면 된다.-->
            <a href="/users/sign_out" data-method="delete"><i class="far fa-user"></i><%#= current_user.username %></a>
          <% else %>
            <a href="/users/sign_in"><i class="fas fa-user-alt"></i></a>
          <% end %></li>
      </ul>
    </div>
  </footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script>
    $('#exampleModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var recipient = button.data('id');
      var title = button.data('title');
      var content = button.data('content');
      var p = button.data('p');
      var modal = $(this)

      modal.find('form').attr('action','/real_story/update/'+recipient);
      modal.find('#edit_title').attr('value',title);
      modal.find('#edit_content').val(content)
      // 아 좃같다 자바스크립트
    });
  </script>
  <script>
    $('#view-content').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var title = button.data('title');
      var modal = $(this)

      modal.find('.modal-title').text(title);
      // 아 좃같다 자바스크립트
    });
  </script>
  <script>
    $(document).ready(function () {
        $('.bxslider').bxSlider({
          slideWidth: 600
        });
    });
  </script>
</body>
</html>
