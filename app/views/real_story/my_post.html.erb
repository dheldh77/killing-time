<section class="listA">
  <div class="container">
    <div class="news">
      <% @posts.each do |p| %>
      <div class="mycard">
        <div class="card-text">
          <div class="card-title">
            <h1><%= p.title %></h1>
          </div>
          <div class="detail">
            <ul>
              <li><p>
                <%= p.created_at.to_s.split(" ")[0].split("-").first %> 년
                <%= p.created_at.to_s.split(" ")[0].split("-")[1] %> 월
                <%= p.created_at.to_s.split(" ")[0].split("-")[2] %> 일
                <%= p.created_at.to_s.split(" ")[1].split(":").first %> 시
                <%= p.created_at.to_s.split(" ")[1].split(":")[1] %> 분
              </p>
              </li>
              <li>
                <div class="edit">
                  <button type="button" class="modal-btn" data-toggle="modal" data-target="#exampleModal" data-p="<%= p %>" data-id="<%= p.id %>" data-title="<%=p.title %>" data-content="<%=p.content%>"><i class="fas fa-edit"></i></button>
                  
                  <!--<a href="/real_story/edit/<#%= p.id %>"><i class="fas fa-edit"></i></a>-->
                  <a href="/real_story/<%= p.id %>" data-method="delete"><i class="fas fa-trash-alt"></i></a>
                </div>
              </li>
            </ul>
          </div>
          <% if p.image.first.nil? %>
            <div class="card-photo">
            </div>
          <% else %>
            <div class="bxslider">
              <% p.image.each do |i| %>
              <div class="card-photo2">
                <%= image_tag i %>
              </div>
              <% end %>
            </div>
          <% end %>
          <div class="content">
            <div class="icon">
              <% if current_user.is_like?(p) %>
                <%#= link_to "좋아요 취소", likes1_path(p), method: "post" %>
                <a href="/likes/likes_toggle/<%=p.id%>"><i style="color:rgb(184,0,0);" class="fas fa-skull"></i></a>
              <% else %>
                <a href="/likes/likes_toggle/<%=p.id%>"><i class="fas fa-skull"></i></a>
                <%#= link_to "좋아요", likes1_path(p), :method => "post" %>
              <% end %>
              <div>
                <button type="button" class="search" data-toggle="modal" data-target="#view-content" 
                data-content="<%= p.content %>"
                data-title="<%= p.title %>"><i class="fas fa-search"></i></button>
                <% if current_user.is_bookmark?(p) %>
                  <a href="/bookmarks/bookmarks_toggle/<%=p.id%>"><i class="fas fa-bookmark"></i></a>
                <% else %>
                  <a href="/bookmarks/bookmarks_toggle/<%=p.id%>"><i class="far fa-bookmark"></i></a>
                <% end %>
              </div>
              
            </div>
            <div class="show-bar" id="like_button">
              <p><%= p.liked_users.size%>명이 무서워합니다.</p>
              <button class="btn" type="button" data-toggle="collapse" data-target="#collapse<%= p.id%>" aria-expanded="false" aria-controls="collapseExample">
                <p>내용보기 <i class="fas fa-caret-down"></i></p>
              </button>
            </div>
            
            <div class="collapse" id="collapse<%= p.id%>">
              <div class="card card-body">
                <p><%= p.content.gsub("\r\n","<br />").html_safe %></p>
              </div>
            </div>
            <hr/>
            <div class="reply" id="rr">
              <% if p.replies.size > 2 %>
                <div style="display:flex; justify-content:flex-end;">
                  <button style="margin-top:5px; padding: 0;" class="btn" type="button" data-toggle="collapse" data-target="#replies<%= p.id %>" aria-expanded="false" aria-controls="collapseExampl">
                    <p style="font-size: ">댓글 더보기<i style="margin-left: 5px;" class="fas fa-caret-down"></i></p>
                  </button>
                </div>
                
              <% end %>
              <% i = 0 %>
              <% p.replies.each do |r| %>
                <% if i > 2 %>
                  <% break %>
                <% end %>
                <div class="reply-content" id="rrr">
                  <p><%= r.user.username %>: <%= r.content %></p>
                  <a href="/real_story/<%=p.id%>/real_story_reply/<%= r.id %>" data-method="delete">
                    <i style="color:#212121; font-size:10px" class="fas fa-eraser reply_icon"></i>
                  </a><br>
                </div>
                <% i+= 1 %>
              <% end %>
              <% if p.replies.size > 2 %>
                <div class="collapse" id="replies<%= p.id %>">
                  <% j = 0 %>
                  <% p.replies.each do |r| %>
                    <% if j <3 %>
                      <% j += 1 %>
                      <% next %>
                    <% end %>
                    <div class="reply-content">
                        <p><%= r.user.username %>: <%= r.content %></p>
                      <a href="/real_story/<%=p.id%>/real_story_reply/<%= r.id %>" data-method="delete">
                          <i style="color:#212121; font-size:10px" class="fas fa-eraser reply_icon"></i>
                      </a><br>
                    </div>
                    <% j += 1 %>
                  <% end %>
                </div>
              <% end %>
            </div>
            <hr>
            <div class="reply-m1">
              <textarea name="content" class="reply-input c1" id="<%=p.id%>_reply_content" rows="1" placeholder="댓글.."></textarea>
              <button id="test" class="reply-button c2" onClick="reply_create('<%=p.id%>')"><i class="fas fa-ellipsis-h"></i></button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="navi">
      <div class="navi-smail">
        <ul class="edit">
          <li><button class="new" type="button" data-toggle="modal" data-target=".create-new"><i class="fas fa-pen"></i>새 글쓰기</button></li>
        </ul>
        <ul class="bookmark">
          <% @bookmarks.each do |p| %>
            <li>
              <% if p.image.first.nil? %>
                <div class="thumb-photo">
                  <a href="/real_story/<%=p.id%>"><img src="/assets/bg.jpg"></a>
                </div>
              <% else %>
                <div class="thumb-photo2">
                  <a href="/real_story/<%=p.id%>"><%= image_tag p.image.first %></a>
                </div>
              <% end %>
              <a href="/real_story/<%=p.id%>"><h1><%= p.title %></h1></a>
              <% if current_user.is_bookmark?(p) %>
                <a href="/bookmarks/bookmarks_toggle/<%=p.id%>"><i style="color: #c7c7c7;"class="fas fa-bookmark icon"></i></a>
              <% else %>
                <a href="/bookmarks/bookmarks_toggle/<%=p.id%>"><i style="color:#c7c7c7;" class="far fa-bookmark icon"></i></a>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>

<script>
  function reply_create(_value){
    var id = _value
    var content = document.getElementById(_value + "_reply_content").value;
    // alert(_value);
    // alert(content);
      $.ajax({
          type:"POST",
          url:"/real_story/post/my_post"+id+"/real_story/post/my_post_reply",
          data : {
            'content' : content,
            'real_story/post/my_post_id': id
          },
          dataType : "json",
          success: function(e){
            // alert(e.user.username)
            $("#"+_value+"_reply_content").val("");
            $("#"+_value+"_rr").append("<div class=\"reply-content\"><p>"+e.user.username+": "+e.reply.content+"</p>"+
            "<a href=\"/real_story/post/my_post/"+_value+"/real_story/post/my_post_reply/"+e.reply.id+"\"" + " data-method=\"delete\"><i style=\"color:#212121; font-size:10px\" class=\"fas fa-eraser reply_icon\"></i><br></div>");
          },
          error: function(xhr, status, error) {
              alert(error);
          }
      });
  }
</script>

