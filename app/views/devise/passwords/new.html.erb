<section class="logC">
  <div class="container">
    <div class="password">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'my-input'%>
        </div>
      
        <div class="actions">
          <%= f.submit "reset password" , class: 'my-btn'%>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
    
  </div>
</section>

